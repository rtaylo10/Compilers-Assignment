<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cminuscomp" default="compile.module.cminuscomp">
  <dirname property="module.cminuscomp.basedir" file="${ant.file.module_cminuscomp}"/>
  
  <property name="module.jdk.home.cminuscomp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cminuscomp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cminuscomp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cminuscomp" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="cminuscomp.output.dir" value="${module.cminuscomp.basedir}/out/production/cMinusComp"/>
  <property name="cminuscomp.testoutput.dir" value="${module.cminuscomp.basedir}/out/test/cMinusComp"/>
  
  <path id="cminuscomp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cminuscomp.module.production.classpath">
    <path refid="${module.jdk.classpath.cminuscomp}"/>
    <pathelement location="${basedir}/java-cup-11b-runtime.jar"/>
    <pathelement location="${basedir}/java-cup-11b.jar"/>
    
    <path refid="library.cminuscomp.classpath"/>
  </path>
  
  <path id="cminuscomp.runtime.production.module.classpath">
    <pathelement location="${cminuscomp.output.dir}"/>
    <pathelement location="${basedir}/java-cup-11b-runtime.jar"/>
    <pathelement location="${basedir}/java-cup-11b.jar"/>
    
    <path refid="library.cminuscomp.classpath"/>
  </path>
  
  <path id="cminuscomp.module.classpath">
    <path refid="${module.jdk.classpath.cminuscomp}"/>
    <pathelement location="${cminuscomp.output.dir}"/>
    <pathelement location="${basedir}/java-cup-11b-runtime.jar"/>
    <pathelement location="${basedir}/java-cup-11b.jar"/>
    
    <path refid="library.cminuscomp.classpath"/>
  </path>
  
  <path id="cminuscomp.runtime.module.classpath">
    <pathelement location="${cminuscomp.testoutput.dir}"/>
    <pathelement location="${cminuscomp.output.dir}"/>
    <pathelement location="${basedir}/java-cup-11b-runtime.jar"/>
    <pathelement location="${basedir}/java-cup-11b.jar"/>
    
    <path refid="library.cminuscomp.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.cminuscomp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cminuscomp">
    <patternset refid="excluded.from.module.cminuscomp"/>
  </patternset>
  
  <path id="cminuscomp.module.sourcepath">
    <dirset dir="${module.cminuscomp.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cminuscomp" depends="compile.module.cminuscomp.production,compile.module.cminuscomp.tests" description="Compile module cMinusComp"/>
  
  <target name="compile.module.cminuscomp.production" depends="register.custom.compilers" description="Compile module cMinusComp; production classes">
    <mkdir dir="${cminuscomp.output.dir}"/>
    <javac2 destdir="${cminuscomp.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cminuscomp}/javac">
      <compilerarg line="${compiler.args.cminuscomp}"/>
      <bootclasspath refid="cminuscomp.module.bootclasspath"/>
      <classpath refid="cminuscomp.module.production.classpath"/>
      <src refid="cminuscomp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cminuscomp"/>
    </javac2>
    
    <copy todir="${cminuscomp.output.dir}/src">
      <fileset dir="${module.cminuscomp.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cminuscomp.tests" depends="register.custom.compilers,compile.module.cminuscomp.production" description="compile module cMinusComp; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cminuscomp" description="cleanup module">
    <delete dir="${cminuscomp.output.dir}"/>
    <delete dir="${cminuscomp.testoutput.dir}"/>
  </target>
</project>